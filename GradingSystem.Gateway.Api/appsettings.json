{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "Issuer": "ExamGateway",
    "Audience": "ExamPlatform",
    "SecretKey": "a-very-long-random-secret-key-here-change-me"
  },
  "ReverseProxy": {
    "Routes": {
      "exam-route": {
        "ClusterId": "exam-cluster",
        "AuthorizationPolicy": "customPolicy",
        "Match": {
          "Path": "/exams/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "submission-route": {
        "ClusterId": "submission-cluster",
        "AuthorizationPolicy": "customPolicy",
        "Match": {
          "Path": "/submissions/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "user-route": {
        "ClusterId": "user-cluster",
        "AuthorizationPolicy": "customPolicy",
        "Match": {
          "Path": "/users/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "exam-cluster": {
        "Destinations": {
          "exam-destination1": {
            "Address": "https://localhost:5001/"
          }
        }
      },
      "submission-cluster": {
        "Destinations": {
          "submission-destination1": {
            "Address": "https://localhost:5002/"
          }
        }
      },
      "user-cluster": {
        "Destinations": {
          "user-destination1": {
            "Address": "https://localhost:5003/"
          }
        }
      }
    }
  }
}
