{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "SubmissionValidation": {
    "StudentFolderPattern": "^[A-Za-z0-9]{5,15}$",
    "MinReportFiles": 1,
    "MaxReportFiles": 1,
    "MinSourceFiles": 1,
    "MaxSourceFiles": 500,
    "FlagExtraFilesAsViolations": true,
    "AllowedStudentExtraExtensions": [ ".dat" ]
  }
}
